{
    "compilerOptions": {
        // outDir: depois que os arquivos .ts forem compilados e convertidos para JavaScript, serão salvos em "dist/js"
        "outDir": "dist/js",
        // target: qual versão do ECMAScript será os arquivos .ts serão convertidos 
        "target": "ES6",
        // noEmitOnError: Não gerará arquivos JavaScript enquanto os TypeScripts não compilar sem erros 
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true
    },
    // Onde estão os arquivos TypeScript a serem compilados
    "include": ["app/**/*"]
}
